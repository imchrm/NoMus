# Environment Configuration
# Copy this file to .env and fill in your actual values

# ===================================
# Environment Selection
# ===================================
# Options: development, staging, production
ENV=development

# ===================================
# Debug Mode
# ===================================
DEBUG=True

# ===================================
# Telegram Bot Configuration
# ===================================
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# ===================================
# Database Configuration (for staging/production)
# ===================================
# Leave empty for development (uses in-memory storage)
DB_HOST=localhost
DB_USER=nomus_user
DB_PASSWORD=secure_password_here

# ===================================
# Remote API (NMservices) Configuration
# ===================================
# Enable to use remote microservices instead of local stubs
# Set services.sms.type and services.payment.type to "remote" in YAML config
REMOTE_API_BASE_URL=http://your-nmservices-host:port
REMOTE_API_KEY=your_remote_api_key_here

# ===================================
# Development Mode Options
# ===================================
# Skip registration flow in development for faster testing
# WARNING: Only use in development environment!
SKIP_REGISTRATION=False

# ===================================
# Monitoring (for production)
# ===================================
# Sentry DSN for error tracking
SENTRY_DSN=
