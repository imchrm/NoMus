# Environment Configuration
# Copy this file to .env and fill in your actual values

# ===================================
# Environment Selection
# ===================================
# Options: development, staging, production
ENV=development

# ===================================
# Debug Mode
# ===================================
DEBUG=True

# ===================================
# Telegram Bot Configuration
# ===================================
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# ===================================
# API Credentials
# ===================================
# Your API credentials for external services
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
API_PASSWORD=your_api_password_here
API_URL=https://api.example.com

# ===================================
# Database Configuration (for staging/production)
# ===================================
# Leave empty for development (uses in-memory storage)
DB_HOST=localhost
DB_USER=nomus_user
DB_PASSWORD=secure_password_here

# ===================================
# Remote API (NMservices) Configuration
# ===================================
# Enable to use remote microservices instead of local stubs
# Set services.sms.type and services.payment.type to "remote" in YAML config
REMOTE_API_BASE_URL=http://your-nmservices-host:port
REMOTE_API_KEY=your_remote_api_key_here

# ===================================
# Development Mode Options
# ===================================
# Skip registration flow in development for faster testing
# WARNING: Only use in development environment!
SKIP_REGISTRATION=False

# ===================================
# Test Remote API Configuration
# ===================================
# Configuration for test_remote_services.py integration tests
# These can be overridden via command line arguments
TEST_REMOTE_API_IP=localhost
TEST_REMOTE_API_PORT=9800
TEST_REMOTE_API_PASSWORD=your_test_api_password_here

# ===================================
# Monitoring (for production)
# ===================================
# Sentry DSN for error tracking
SENTRY_DSN=
